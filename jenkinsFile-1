pipeline {
    agent any

    environment {
        SCANNER_HOME = 'C:\\sonar-scanner\\sonar-scanner-6.2.1.4610' // Update with your scanner's path
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar') { // Ensure this matches the name of your SonarQube installation
                    bat "${SCANNER_HOME}\\bin\\sonar-scanner.bat"
                }
            }
        }
    }
}
