pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    stages {
        stage('Build') {
            steps {
                script {
                    // Run clean and package before sonar scan
                    bat 'mvn clean package'
                }
            }
        }

        stage('Scan') {
            steps {
                withSonarQubeEnv('sq1') {  // 'sq1' is the SonarQube installation name in Jenkins
                    bat 'mvn sonar:sonar'
                }
            }
        }
    }
}
