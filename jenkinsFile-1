pipeline {
    agent any

    environment {
        SCANNER_HOME = 'C:\\sonar-scanner\\sonar-scanner-6.2.1.4610' // Set the path to your sonar-scanner
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar') { // Ensure 'sonar' is your SonarQube server name in Jenkins
                    bat "${SCANNER_HOME}\\bin\\sonar-scanner.bat"
                }
            }
        }
    }
}
