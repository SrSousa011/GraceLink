pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    environment {
        SONARQUBE_SERVER = 'sq1'
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    bat 'flutter pub get'
                }
            }
        }

        stage('Build Flutter Project') {
            steps {
                script {
                    bat 'flutter clean'
                    bat 'flutter build apk'
                }
            }
        }

        stage('SonarQube Scan') {
            steps {
                withSonarQubeEnv(SONARQUBE_SERVER) {
                    script {
                        bat 'flutter pub run build_runner build'
                        bat "mvn sonar:sonar -Dsonar.projectKey=com.gracelink:GraceLink -Dsonar.sources=lib -Dsonar.tests=test"
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    def qualityGate = waitForQualityGate()

                    if (qualityGate.status != 'OK') {
                        echo "Quality Gate failed: ${qualityGate.status}"
                        currentBuild.result = 'ABORTED'
                        return
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                echo "Executing post-build actions for Flutter project"
            }
        }

        success {
            script {
                echo "Build and SonarQube analysis completed successfully!"
            }
        }

        failure {
            script {
                echo "Build or SonarQube analysis failed. Check logs for details."
            }
        }
    }
}
