pipeline {
    agent any

    environment {
        SCANNER_HOME = 'C:\\sonar-scanner\\sonar-scanner-6.2.1.4610'  // Path to your SonarQube scanner
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sq1') {  // Ensure this matches the SonarQube installation name in Jenkins
                    bat "${SCANNER_HOME}\\bin\\sonar-scanner.bat"
                }
            }
        }
    }
}
