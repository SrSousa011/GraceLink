pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    environment {
        SONARQUBE_SERVER = 'sq1'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SrSousa011/GraceLink.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    bat 'mvn clean package'  // You can update this to run your Flutter build instead
                }
            }
        }

        stage('SonarQube Scan') {
            steps {
                withSonarQubeEnv(SONARQUBE_SERVER) {
                    script {
                        // Use your project key and the correct path for Dart code (lib)
                        bat 'sonar-scanner -Dsonar.projectKey=gracelink -Dsonar.sources=lib -Dsonar.language=dart'
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    def qualityGate = waitForQualityGate()

                    if (qualityGate.status != 'OK') {
                        echo "Quality Gate failed: ${qualityGate.status}"
                        currentBuild.result = 'ABORTED'
                        return
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                echo "Performing post-build actions on Windows"
            }
        }

        success {
            script {
                echo "Build and SonarQube scan passed successfully!"
            }
        }

        failure {
            script {
                echo "Build failed. Check the logs for more details."
            }
        }
    }
}
