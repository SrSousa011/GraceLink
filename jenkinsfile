pipeline {
    agent any
    tools {
        nodejs 'Node 20.11.1'
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', 
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[url: 'https://github.com/SrSousa011/GraceLink.git']]
                    ])
                }
            }
        }
        
        stage('Build') {
            steps {
                bat 'npm install'
                bat 'npm run build'
            }
        }

        stage('Run Unit Tests') {
            steps {
                bat 'npm run test'
            }
        }
    }
}
