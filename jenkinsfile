pipeline {
    agent any
    environment {
        // Full path to Git and Flutter
        GIT_PATH = "C:\\Program Files\\Git\\bin\\git.exe"
        FLUTTER_PATH = "C:\\src\\flutter\\bin\\flutter.bat"
    }
    stages {
        stage('Check Git Version') {
            steps {
                script {
                    echo 'Checking Git version...'
                    bat "\"${env.GIT_PATH}\" --version"
                }
            }
        }
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/SrSousa011/GraceLink.git'
            }
        }
        stage('Debug PATH') {
            steps {
                script {
                    echo "Current PATH: ${env.PATH}"
                    bat 'echo %PATH%'
                }
            }
        }
stage('Flutter Clean') {
    steps {
        script {
            echo 'Running flutter clean...'
            bat "\"C:\\Program Files\\Git\\bin\\git.exe\" --version" // To ensure Git is found first
            bat "\"C:\\src\\flutter\\bin\\flutter.bat\" clean"
        }
    }
}

        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Installing dependencies...'
                    bat "\"${env.FLUTTER_PATH}\" pub get"
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    echo 'Running tests...'
                    bat "\"${env.FLUTTER_PATH}\" test"
                }
            }
        }
        stage('Build App Bundle') {
            steps {
                script {
                    echo 'Building app bundle...'
                    bat "\"${env.FLUTTER_PATH}\" build appbundle --release"
                }
            }
        }
    }
    post {
        success {
            echo 'Build and tests passed successfully!'
        }
        failure {
            echo 'Build or tests failed. Check the logs for details.'
        }
    }
}
