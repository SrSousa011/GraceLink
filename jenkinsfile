pipeline {
    agent any
    stages {
        stage('Testar Git') {
            steps {
                bat 'git --version' // Para Windows
            }
        }

        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', 
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[url: 'https://github.com/SrSousa011/GraceLink.git']]
                    ])
                }
            }
        }

        stage('Clean') {
            steps {
                bat 'flutter clean'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'flutter pub get'
            }
        }

        stage('Build App Bundle') {
            steps {
                bat 'flutter build appbundle --release'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'flutter test'
            }
        }

        stage('Archive Build Artifacts') {
            steps {
                archiveArtifacts artifacts: 'build/app/outputs/bundle/release/*.aab', allowEmptyArchive: true
            }
        }
    }

    post {
        success {
            bat 'echo Build was successful!'
        }
        failure {
            bat 'echo Build failed!'
        }
    }
}
