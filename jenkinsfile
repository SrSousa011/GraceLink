pipeline {
    agent any
    environment {
        PATH = "C:\\Program Files\\Git\\bin;C:\\src\\flutter\\bin;${env.PATH}"
    }

    stages {
        stage('Debug Environment') {
            steps {
                bat '''
                echo Setting up paths...
                set GIT_HOME=C:\\Program Files\\Git
                set PATH=%GIT_HOME%\\bin;%GIT_HOME%\\cmd;C:\\src\\flutter\\bin;%PATH%
                echo Validating environment:
                echo Current PATH: %PATH%
                git --version || echo Git not found!
                flutter --version || echo Flutter not found!
                echo Running Flutter doctor...
                flutter doctor
                '''
            }
        }

        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', 
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[url: 'https://github.com/SrSousa011/GraceLink.git']]
                    ])
                }
            }
        }

        stage('Clean') {
            steps {
                bat 'flutter clean'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'flutter pub get'
            }
        }

        stage('Build App Bundle') {
            steps {
                bat 'flutter build appbundle --release'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'flutter test'
            }
        }

        stage('Archive Build Artifacts') {
            steps {
                archiveArtifacts artifacts: 'build/app/outputs/bundle/release/*.aab', allowEmptyArchive: true
            }
        }
    }

    post {
        success {
            bat 'echo Build was successful!'
        }
        failure {
            bat 'echo Build failed!'
        }
    }
}
