pipeline {
    agent any
    environment {
        // Make sure to include the full path to Git and Flutter
        PATH = "C:\\Program Files\\Git\\bin;C:\\src\\flutter\\bin;${env.PATH}"
    }
    stages {
        stage('Check Git Version') {
            steps {
                script {
                    echo 'Checking Git version...'
                    bat 'git --version'
                }
            }
        }
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/SrSousa011/GraceLink.git'
            }
        }
        stage('Debug PATH') {
            steps {
                script {
                    // Debugging step to print the PATH environment variable
                    echo "Current PATH: ${env.PATH}"
                    bat 'echo %PATH%' // Windows batch command to print PATH
                }
            }
        }
        stage('Flutter Clean') {
            steps {
                script {
                    echo 'Running flutter clean...'
                    bat 'flutter clean'
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Installing dependencies...'
                    bat 'flutter pub get'
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    echo 'Running tests...'
                    bat 'flutter test'
                }
            }
        }
        stage('Build App Bundle') {
            steps {
                script {
                    echo 'Building app bundle...'
                    bat 'flutter build appbundle --release'
                }
            }
        }
    }
    post {
        success {
            echo 'Build and tests passed successfully!'
        }
        failure {
            echo 'Build or tests failed. Check the logs for details.'
        }
    }
}
