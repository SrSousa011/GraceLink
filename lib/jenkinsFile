pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', 
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[url: 'https://github.com/SrSousa011/GraceLink.git']]
                    ])
                }
            }
        }

        stage('Clean') {
            steps {
                bat 'flutter clean'  // Running flutter clean to remove old build artifacts
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'flutter pub get'  // Fetch Flutter dependencies
            }
        }

        stage('Build App Bundle') {
            steps {
                bat 'flutter build appbundle --release'  // Build the release Android App Bundle (.aab)
            }
        }

        stage('Run Tests') {
            steps {
                bat 'flutter test'  // Run Flutter unit tests
            }
        }

        stage('Archive Build Artifacts') {
            steps {
                archiveArtifacts artifacts: 'build/app/outputs/bundle/release/*.aab', allowEmptyArchive: true  // Archive the generated .aab file
            }
        }
    }

    post {
        success {
            bat 'Build was successful!'  // Success message (printed to Jenkins console)
            // Optionally send success notifications (Slack, email, etc.)
        }
        failure {
            bat 'Build failed!'  // Failure message (printed to Jenkins console)
            // Optionally send failure notifications (Slack, email, etc.)
        }
    }
}
